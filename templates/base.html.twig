<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <script src="{{ asset('build/modernizr.js') }}"></script>
    </head>

    <body>
        <header>
            <nav class="title-bar" data-responsive-toggle="main-navigation" data-hide-for="medium">
                <button class="menu-icon" type="button" data-toggle="main-navigation"></button>
                <div class="title-bar-title">Menu</div>
            </nav>

            <nav class="top-bar" id="main-navigation">
                <section class="top-bar-left hide-for-small-only">
                    <ul class="dropdown menu" data-dropdown-menu>
                        <li><a href="/" class="logo">Top 2000 - Databank</a></li>
                    </ul>
                </section>

                <section class="top-bar-right">
                    <ul class="vertical medium-horizontal menu" data-responsive-menu="accordion medium-dropdown">
                        <li>
                            <a href="#">Artiesten</a>
                        </li>
                        <li>
                            <a href="#">Platen</a>
                        </li>
                        <li>
                            <a href="#">Informatie</a>
                            <ul class="vertical menu">
                                <li><a href="#">Over</a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </li>
                    </ul>
                </section>
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer>

        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
